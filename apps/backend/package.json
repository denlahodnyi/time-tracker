{
  "name": "backend",
  "private": true,
  "author": "Den Lahodnyi",
  "version": "1.0.0",
  "description": "",
  "license": "",
  "type": "module",
  "main": "./dist/src/index.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "pnpm env:dev -- nodemon src/index.ts",
    "build": "rm -rf dist && tsc",
    "start": "pnpm env:prod -- node dist/src/index.js",
    "db:push": "pnpm env:dev -- pnpm -F @libs/prisma push",
    "db:reset": "pnpm env:dev -- pnpm -F @libs/prisma reset",
    "migrate:status": "pnpm env:dev -- pnpm -F @libs/prisma migrate:status",
    "migrate:dev": "pnpm env:dev -- pnpm -F @libs/prisma migrate:dev",
    "seed-sync-client:dev": "pnpm env:dev -- pnpm -F @libs/prisma seed-client:sync",
    "seed-generate-client:dev": "pnpm env:dev -- pnpm -F @libs/prisma seed-client:generate",
    "seed": "pnpm env:dev -- pnpm -F @libs/prisma seed",
    "seed:dev": "pnpm env:dev -- pnpm -F @libs/prisma seed:dev",
    "prisma:generate": "pnpm -F @libs/prisma generate",
    "prisma:build": "pnpm -F @libs/prisma build",
    "test:unit": "pnpm env:test -- jest --config jest.config.unit.ts",
    "test:int": "pnpm env:test -- jest --config jest.config.int.ts",
    "test:clear": "jest --clearCache",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "dotenvx": "dotenvx",
    "env:dev": "dotenvx run -f .env.development.local -f .env.development -f .env",
    "env:prod": "dotenvx run -f .env.production.local -f .env.production -f .env",
    "env:test": "dotenvx run -f .env.test.local -f .env.test -f .env",
    "dotenvx:example": "dotenvx genexample -f .env -f .env.development"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.658.0",
    "@aws-sdk/lib-storage": "^3.658.0",
    "@aws-sdk/s3-request-presigner": "^3.658.0",
    "@dotenvx/dotenvx": "^0.44.0",
    "@libs/prisma": "workspace:*",
    "@prisma/adapter-pg": "^5.14.0",
    "bcrypt": "^5.1.1",
    "chalk": "^5.3.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "express": "^4.19.2",
    "formidable": "^3.5.1",
    "globals": "^15.4.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.5",
    "pg-format": "^1.0.4",
    "sharp": "^0.33.5",
    "tiny-invariant": "^1.3.3",
    "zod": "^3.23.8",
    "zod-validation-error": "^3.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.6",
    "@babel/preset-env": "^7.24.6",
    "@babel/preset-typescript": "^7.24.6",
    "@eslint/js": "^9.3.0",
    "@total-typescript/ts-reset": "^0.5.1",
    "@tsconfig/node20": "^20.1.4",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/express": "^4.17.21",
    "@types/formidable": "^3.4.5",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.12",
    "@types/pg": "^8.11.6",
    "@types/pg-format": "^1.0.5",
    "@types/supertest": "^6.0.2",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.5.0",
    "eslint-plugin-jest-extended": "^2.4.0",
    "fishery": "^2.2.2",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "jest-mock-extended": "^3.0.7",
    "nodemon": "^3.1.1",
    "prettier": "3.2.5",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.15.0"
  }
}
